<Window x:Class="WpfLess4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLess4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" KeyDown="Window_KeyDown" KeyUp="Window_KeyUp">

    <Window.Resources>
        <Style TargetType="Border">
            <Setter Property="Margin" Value="1"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="20"/>
        </Style>

        <Style x:Key="OtherButtons" TargetType="TextBlock">
            <Setter Property="FontSize" Value="25"/>
        </Style>
    </Window.Resources>

    <Grid x:Name="KeyboardGrid" DataContext="{Binding CurrentKeyboard}">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            
        </Grid>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.25*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1.25*"/>
            </Grid.ColumnDefinitions>

            <Border DataContext="{Binding KeyTab}"
                    Grid.Column="0" Background="{Binding Color}">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="{Binding OtherButtons}" Text="{Binding Text}"/>
            </Border>

            <Border DataContext="{Binding KeyQ}"
                    Grid.Column="1" Background="{Binding Color}">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="30" Text="{Binding Text}"/>
            </Border>

            <Border DataContext="{Binding KeyW}"
                    Grid.Column="2" Background="{Binding Color}">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="30" Text="{Binding Text}"/>
            </Border>

            <Border DataContext="{Binding KeyE}"
                    Grid.Column="3" Background="{Binding Color}">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="30" Text="{Binding Text}"/>
            </Border>

            <Border DataContext="{Binding KeyR}"
                    Grid.Column="4" Background="{Binding Color}">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="30" Text="{Binding Text}"/>
            </Border>

            <Border DataContext="{Binding KeyT}"
                    Grid.Column="5" Background="{Binding Color}">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="30" Text="{Binding Text}"/>
            </Border>

            <Border DataContext="{Binding KeyY}"
                    Grid.Column="6" Background="{Binding Color}">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="30" Text="{Binding Text}"/>
            </Border>

            <Border DataContext="{Binding KeyU}"
                    Grid.Column="7" Background="{Binding Color}">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="30" Text="{Binding Text}"/>
            </Border>

            <Border DataContext="{Binding KeyI}"
                    Grid.Column="8" Background="{Binding Color}">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="30" Text="{Binding Text}"/>
            </Border>

            <Border DataContext="{Binding KeyO}"
                    Grid.Column="9" Background="{Binding Color}">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="30" Text="{Binding Text}"/>
            </Border>

            <Border DataContext="{Binding KeyP}"
                    Grid.Column="10" Background="{Binding Color}">
                <TextBlock HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="30" Text="{Binding Text}"/>
            </Border>

            <Border DataContext="{Binding KeyLeftAltBr}"
                    Grid.Column="11" Background="{Binding Color}">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="30" Text="{Binding Text}"/>
            </Border>

            <Border DataContext="{Binding KeyRightAltBr}"
                    Grid.Column="12" Background="{Binding Color}">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="30" Text="{Binding Text}"/>
            </Border>

        </Grid>

        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
        </Grid>

        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.25*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2.25*"/>
            </Grid.ColumnDefinitions>
        </Grid>

        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.25*"/>
                <ColumnDefinition Width="1.25*"/>
                <ColumnDefinition Width="1.25*"/>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="1.25*"/>
                <ColumnDefinition Width="1.25*"/>
                <ColumnDefinition Width="1.25*"/>
            </Grid.ColumnDefinitions>
        </Grid>

    </Grid>

    
</Window>
