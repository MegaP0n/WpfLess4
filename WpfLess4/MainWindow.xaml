            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <Border DataContext="{Binding KeyNumber0}" Style="{StaticResource BorderStyle}"
                    Grid.Column="0" Background="{Binding Color}">
                <TextBlock Style="{StaticResource StandardButtons}" Text="{Binding Text}"/>
            </Border>

            <Border DataContext="{Binding KeyNumber1}" Style="{StaticResource BorderStyle}"
                    Grid.Column="1" Background="{Binding Color}">
                <TextBlock Style="{StaticResource StandardButtons}" Text="{Binding Text}"/>
            </Border>

